{
  "name": "graphql-api-gateway",
  "description": "An GraphQL API gateway for DoSomething.org services.",
  "scripts": {
    "start": "nodemon -e js --ignore src/playground.js local.js",
    "start:production": "node local.js",
    "build": "NODE_ENV=production webpack",
    "test": "npm run lint && npm run format:ci",
    "lint": "eslint --ext .js src",
    "format:ci": "prettier-check {src,config}/**/*.js",
    "format": "prettier --write {src,config}/**/*.js",
    "heroku-postbuild": "node bin/export.js && apollo service:push --localSchemaFile=schema.graphql --key=$ENGINE_API_KEY",
    "compile": "babel src -d lib/src && babel config -d lib/config"
  },
  "engines": {
    "node": "8.x",
    "npm": "5.3.x"
  },
  "babel": {
    "presets": [
      "@dosomething/babel-config"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DoSomething/graphql.git"
  },
  "author": "David Furnes <dfurnes@dosomething.org>",
  "license": "MIT",
  "esm": {
    "cjs": true
  },
  "eslintConfig": {
    "extends": "@dosomething/eslint-config",
    "plugins": [
      "prettier"
    ],
    "globals": {
      "fetch": false
    },
    "rules": {
      "prettier/prettier": "error",
      "id-length": [
        "error",
        {
          "exceptions": [
            "_"
          ]
        }
      ],
      "no-underscore-dangle": [
        "error",
        {
          "allow": [
            "_queryType",
            "_mutationType"
          ]
        }
      ],
      "space-unary-ops": "off",
      "arrow-parens": "off"
    }
  },
  "dependencies": {
    "apollo": "^2.3.0",
    "apollo-server": "^2.3.2",
    "apollo-server-express": "^2.3.2",
    "apollo-server-lambda": "^2.3.2",
    "boxen": "^1.3.0",
    "catbox": "^10.0.6",
    "catbox-dynamodb": "dfurnes/catbox-dynamodb#promise",
    "catbox-memory": "^4.0.1",
    "catbox-redis": "^4.2.4",
    "chalk": "^2.4.2",
    "contentful": "^7.1.0",
    "dataloader": "^1.4.0",
    "dotenv": "^6.2.0",
    "esm": "^3.2.0",
    "express": "^4.16.4",
    "graphql": "~14.0.0",
    "graphql-iso-date": "^3.5.0",
    "graphql-tools": "^4.0.3",
    "graphql-url": "^2.0.4",
    "heroku-logger": "^0.3.3",
    "lodash": "^4.17.10",
    "node-fetch": "^2.2.1",
    "qs": "^6.5.1"
  },
  "devDependencies": {
    "@dosomething/babel-config": "^2.2.2",
    "@dosomething/eslint-config": "^3.1.2",
    "@dosomething/webpack-config": "^4.1.1",
    "apollo-link-http": "^1.5.11",
    "apollo-link-ws": "^1.0.14",
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-polyfill": "^6.26.0",
    "eslint": "^4.19.1",
    "eslint-plugin-prettier": "^2.6.0",
    "graphql-playground-react": "^1.7.19",
    "nodemon": "^1.18.9",
    "oidc-client": "^1.6.1",
    "prettier": "1.8.2",
    "prettier-check": "^2.0.0",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "regenerator-runtime": "^0.13.1",
    "subscriptions-transport-ws": "^0.9.15",
    "webpack": "^4.29.5",
    "webpack-dev-middleware": "^3.6.0"
  }
}
